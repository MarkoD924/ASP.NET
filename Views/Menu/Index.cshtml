@model List<Menu.Models.Jelo>
@{
	ViewData["Title"] = "MenuIndex";
}
<div class="container">
	<div class="row">
		@foreach(var item in Model)
		{
			<div class="col-6">
				<div class="d-flex justify-content-center">
					<h4>@item.Ime</h4>
				</div>
				<div class="d-flex justify-content-center">
					<img src="@item.ImageUrl" style="width:70%"/>
				</div class>
				<div class ="d-flex justify-content-center">
						@item.Cena.ToString("N2") Dinara
				</div>
			</div>
		}
	</div>
</div>
